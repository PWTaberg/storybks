<h1>Stories</h1>
<div class="row">
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        {{#if user}}
        <!-- user.id is stories.user.id,id is story.id ../user.id = global scope user.id, -->
        {{{editIcon user.id ../user.id id}}}
        {{/if}}
        <!-- replacing 
            <a href="/stories/edit/${storyId}" class="btn-floating halfway-fab red">
            <i class="fa fa-pencil"></i></a> -->
      </div>
      <div class="card-content center-align">
        <h5>{{title}}</h5>
        <p class="story-text"></p>{{stripTags (truncate 
          body 150)}}<p>
          <p>{{user.firstName}}</p>
          <br>
          <div class="chip">
            <img src="{{user.img}}">
            <a href="/stories/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
          </div>
      </div>
      <div class="card-action center-align">
        <a class="btn grey" href="/stories/show/{{id}}"> Read More</a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No stories found</p>

  {{/each}}
</div>